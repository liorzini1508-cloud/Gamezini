    <div class="main-layout" id="game-container">
        <canvas id="tetris"></canvas>
        <div class="next-piece-wrapper">
            <span class="next-label">◊î◊ë◊ê:</span>
            <canvas id="next" width="70" height="40"></canvas>
        </div>
    </div>

    <div class="controls-area">
        <div class="d-pad">
            <button class="btn btn-rotate" id="btn-rotate">‚Üª</button>
            <button class="btn btn-left" id="btn-left">‚óÄ</button>
            <button class="btn btn-down" id="btn-down">‚ñº</button>
            <button class="btn btn-right" id="btn-right">‚ñ∂</button>
        </div>
    </div>

    <div id="overlay" class="overlay">
        <h1 id="overlay-title">Fizikal Pro</h1>
        <p id="overlay-msg">◊û◊ï◊õ◊†◊ô◊ù ◊ú◊û◊©◊û◊®◊™?</p>
        <p id="score-display" style="display:none; font-size: 24px; font-weight: bold; color: #FF4757; margin-top: 5px;">◊†◊ô◊ß◊ï◊ì: <span id="final-score">0</span></p>
        <button class="btn-start" onclick="startGame()">◊î◊™◊ó◊ú ◊¢◊ë◊ï◊ì◊î</button>
    </div>

    <script>
        const canvas = document.getElementById('tetris');
        const context = canvas.getContext('2d');
        const nextCanvas = document.getElementById('next');
        const nextContext = nextCanvas.getContext('2d');
        const scoreElement = document.getElementById('score');
        const finalScoreElement = document.getElementById('final-score');
        const overlay = document.getElementById('overlay');
        const overlayTitle = document.getElementById('overlay-title');
        const overlayMsg = document.getElementById('overlay-msg');
        const scoreDisplay = document.getElementById('score-display');
        
        const COLS = 12;
        const ROWS = 20;
        let BLOCK_SIZE = 20;

        const COLORS = [
            null,
            '#FF4757', '#2ED573', '#1E90FF', '#FFA502', 
            '#3742fa', '#ff6b81', '#00d2d3',
        ];

        // ◊î◊®◊©◊ô◊û◊î ◊î◊û◊ú◊ê◊î ◊ï◊î◊û◊¢◊ï◊ì◊õ◊†◊™
        const TOPICS = [
            "◊ó◊ô◊ë◊ï◊® ◊ú-Move", "◊û◊©◊ô◊û◊ï◊™", "◊û◊™◊¢◊†◊ô◊ô◊†◊ô◊ù", "◊ú◊ô◊ì◊ô◊ù", 
            "◊î◊ß◊û◊™ ◊§◊¢◊ô◊ú◊ï◊™", "◊©◊ú◊ô◊ó◊™ ◊ò◊§◊°◊ô◊ù", "◊ñ◊ô◊î◊ï◊ô ◊§◊†◊ô◊ù ◊ë◊õ◊†◊ô◊°◊î", 
            "◊©◊ú◊ô◊ó◊™ ◊î◊ï◊ì◊¢◊ï◊™", "◊î◊ï◊°◊§◊™ ◊û◊†◊ï◊ô", "◊ë◊ô◊ò◊ï◊ú ◊û◊†◊ï◊ô", 
            "◊©◊ô◊†◊ï◊ô ◊°◊ò◊ò◊ï◊° ◊û◊©◊ô◊û◊î", "◊î◊ï◊°◊§◊™ ◊¢◊û◊ì◊™ ◊§◊ô◊ñ◊ô◊ß◊ú", "◊ô◊¶◊ô◊®◊™ ◊™◊ß◊†◊ï◊ü", 
            "◊î◊ï◊°◊§◊™ ◊ú◊ß◊ï◊ó", "◊ú◊©◊ú◊ï◊ó ◊ï◊ï◊ê◊ò◊°◊ê◊§ ◊ú◊ú◊ß◊ï◊ó", "◊í◊ë◊ô◊ô◊î", 
            "◊†◊™◊ï◊†◊ô ◊î◊õ◊†◊°◊ï◊™", "◊õ◊û◊ï◊™ ◊õ◊†◊ô◊°◊ï◊™", "◊†◊ï◊õ◊ó◊ï◊™ ◊¢◊ï◊ë◊ì◊ô◊ù", 
            "◊§◊†◊ô◊ô◊î ◊ú◊™◊û◊ô◊õ◊™ ◊§◊ô◊ñ◊ô◊ß◊ú", "◊ë◊ß◊®◊™ ◊õ◊†◊ô◊°◊î", "◊©◊ô◊ï◊ö ◊¶'◊ô◊§ ◊ú◊ú◊ß◊ï◊ó", 
            "◊ë◊ô◊ò◊ï◊ú ◊©◊ô◊¢◊ï◊®", "◊ñ◊ô◊õ◊ï◊ô◊ô◊ù ◊ú◊ú◊ß◊ï◊ó◊ï◊™", "◊¢◊ï◊ñ◊® Ai", 
            "◊™◊û◊ô◊õ◊î ◊ê◊†◊ï◊©◊ô◊™", "◊ê◊ï◊ò◊ï◊û◊¶◊ô◊ï◊™", "◊û◊ô◊†◊ô ◊°◊ô◊ô◊ò", 
            "◊õ◊†◊ô◊°◊™ QR", "◊ê◊§◊ú◊ô◊ß◊¶◊ô◊î ◊ú◊ú◊ß◊ï◊ó◊ï◊™", "◊ú◊ô◊†◊ß◊ô◊ù ◊ú◊®◊õ◊ô◊©◊î", 
            "◊î◊†◊î◊ú◊™ ◊ó◊©◊ë◊ï◊†◊ï◊™", "◊î◊ò◊ë◊ï◊™ ◊ú◊°◊ú◊ô◊ß◊î", "◊†◊ô◊°◊ô◊ï◊ü 30 ◊©◊†◊î"
        ];

        let arena = createMatrix(COLS, ROWS);

        function resizeGame() {
            const container = document.getElementById('game-container');
            const availableHeight = container.clientHeight - 80; 
            const availableWidth = container.clientWidth - 20;
            const sizeByHeight = Math.floor(availableHeight / ROWS);
            const sizeByWidth = Math.floor(availableWidth / COLS);
            BLOCK_SIZE = Math.max(15, Math.min(sizeByHeight, sizeByWidth));
            canvas.width = COLS * BLOCK_SIZE;
            canvas.height = ROWS * BLOCK_SIZE;
            if (isPaused && player.matrix) draw();
        }

        const player = {
            pos: {x: 0, y: 0},
            matrix: null,
            score: 0,
            label: "",
            colorIdx: 1,
            next: null,
            nextLabel: "",
            nextColor: 1
        };

        let lastTime = 0;
        let dropCounter = 0;
        let dropInterval = 1000;
        let isPaused = true;
        let lastMoveTime = 0;
        const MOVE_DELAY = 80;

        function createMatrix(w, h) {
            const matrix = [];
            while (h--) matrix.push(new Array(w).fill(0));
            return matrix;
        }

        function createPiece(type) {
            if (type === 'I') return [[0, 1, 0, 0],[0, 1, 0, 0],[0, 1, 0, 0],[0, 1, 0, 0]];
            if (type === 'L') return [[0, 2, 0],[0, 2, 0],[0, 2, 2]];
            if (type === 'J') return [[0, 3, 0],[0, 3, 0],[3, 3, 0]];
            if (type === 'O') return [[4, 4],[4, 4]];
            if (type === 'Z') return [[5, 5, 0],[0, 5, 5],[0, 0, 0]];
            if (type === 'S') return [[0, 6, 6],[6, 6, 0],[0, 0, 0]];
            if (type === 'T') return [[0, 7, 0],[7, 7, 7],[0, 0, 0]];
            return [[4,4],[4,4]]; 
        }

        function drawBlock(ctx, x, y, colorIdx, size) {
            if (!COLORS[colorIdx]) return;
            const baseColor = COLORS[colorIdx];
            const px = x * size;
            const py = y * size;
            
            let grd = ctx.createLinearGradient(px, py, px + size, py + size);
            grd.addColorStop(0, '#ffffff');
            grd.addColorStop(0.3, baseColor);
            grd.addColorStop(1, baseColor);
            
            ctx.fillStyle = grd;
            ctx.fillRect(px, py, size, size);
            
            ctx.strokeStyle = "rgba(0,0,0,0.1)";
            ctx.lineWidth = 1;
            ctx.strokeRect(px, py, size, size);
            
            ctx.fillStyle = "rgba(255,255,255,0.3)";
            ctx.fillRect(px + 2, py + 2, size - 4, size/3);
        }

        function draw() {
            context.fillStyle = 'rgba(40, 40, 70, 0.95)';
            context.fillRect(0, 0, canvas.width, canvas.height);

            arena.forEach((row, y) => {
                row.forEach((value, x) => {
                    if (value !== 0) drawBlock(context, x, y, value, BLOCK_SIZE);
                });
            });

            if (player.matrix) {
                player.matrix.forEach((row, y) => {
                    row.forEach((value, x) => {
                        if (value !== 0) {
                            drawBlock(context, x + player.pos.x, y + player.pos.y, player.colorIdx, BLOCK_SIZE);
                        }
                    });
                });
                drawLabel(context, player.label, player.pos.x, player.pos.y, player.matrix, BLOCK_SIZE);
            }
        }

        function drawLabel(ctx, text, posX, posY, matrix, size) {
            const centerY = (posY * size) - 10;
            const centerX = (posX * size) + (matrix[0].length * size / 2);
            
            // ◊§◊ï◊†◊ò ◊¢◊ë◊î ◊ï◊í◊ì◊ï◊ú ◊ô◊ï◊™◊®
            ctx.font = "900 13px 'Rubik', sans-serif";
            ctx.textAlign = "center";
            ctx.textBaseline = "middle";
            
            const textWidth = ctx.measureText(text).width + 12;
            
            ctx.fillStyle = "rgba(0, 0, 0, 0.8)"; // ◊õ◊î◊î ◊ô◊ï◊™◊® ◊ú◊ß◊ï◊†◊ò◊®◊°◊ò
            ctx.beginPath();
            ctx.roundRect(centerX - textWidth/2, centerY - 11, textWidth, 22, 6);
            ctx.fill();
            
            ctx.fillStyle = "#ffffff";
            ctx.fillText(text, centerX, centerY);
        }

        function drawNext() {
            nextContext.clearRect(0, 0, nextCanvas.width, nextCanvas.height);
            if (!player.next) return;
            const smallBlock = 10;
            const offsetX = (nextCanvas.width - player.next[0].length * smallBlock) / 2;
            const offsetY = (nextCanvas.height - player.next.length * smallBlock) / 2;
            player.next.forEach((row, y) => {
                row.forEach((value, x) => {
                    if (value !== 0) {
                        nextContext.fillStyle = COLORS[player.nextColor];
                        nextContext.fillRect(x * smallBlock + offsetX, y * smallBlock + offsetY, smallBlock - 1, smallBlock - 1);
                    }
                });
            });
        }

        function merge(arena, player) {
            player.matrix.forEach((row, y) => {
                row.forEach((value, x) => {
                    if (value !== 0) {
                        arena[y + player.pos.y][x + player.pos.x] = player.colorIdx;
                    }
                });
            });
        }

        function rotate(matrix, dir) {
            for (let y = 0; y < matrix.length; ++y) {
                for (let x = 0; x < y; ++x) {
                    [matrix[x][y], matrix[y][x]] = [matrix[y][x], matrix[x][y]];
                }
            }
            if (dir > 0) matrix.forEach(row => row.reverse());
            else matrix.reverse();
        }

        function playerDrop() {
            player.pos.y++;
            if (collide(arena, player)) {
                player.pos.y--;
                merge(arena, player);
                playerReset();
                arenaSweep();
                updateScore();
            }
            dropCounter = 0;
        }

        function playerMove(offset) {
            const now = Date.now();
            if (now - lastMoveTime < MOVE_DELAY) return;
            lastMoveTime = now;
            player.pos.x += offset;
            if (collide(arena, player)) {
                player.pos.x -= offset;
            }
        }

        function playerRotateImpl(dir) {
            const pos = player.pos.x;
            let offset = 1;
            rotate(player.matrix, dir);
            while (collide(arena, player)) {
                player.pos.x += offset;
                offset = -(offset + (offset > 0 ? 1 : -1));
                if (offset > player.matrix[0].length) {
                    rotate(player.matrix, -dir);
                    player.pos.x = pos;
                    return;
                }
            }
        }

        function playerReset() {
            const pieces = 'ILJOTSZ';
            if (player.next === null) {
                player.next = createPiece(pieces[pieces.length * Math.random() | 0]);
                player.nextLabel = TOPICS[Math.floor(Math.random() * TOPICS.length)];
                player.nextColor = Math.floor(Math.random() * (COLORS.length - 1)) + 1;
            }
            player.matrix = player.next;
            player.label = player.nextLabel;
            player.colorIdx = player.nextColor;
            player.next = createPiece(pieces[pieces.length * Math.random() | 0]);
            player.nextLabel = TOPICS[Math.floor(Math.random() * TOPICS.length)];
            player.nextColor = Math.floor(Math.random() * (COLORS.length - 1)) + 1;
            drawNext();
            
            player.pos.y = 0;
            player.pos.x = (arena[0].length / 2 | 0) - (player.matrix[0].length / 2 | 0);
            
            if (collide(arena, player)) {
                gameOver();
            }
        }

        function collide(arena, player) {
            const [m, o] = [player.matrix, player.pos];
            for (let y = 0; y < m.length; ++y) {
                for (let x = 0; x < m[y].length; ++x) {
                    if (m[y][x] !== 0) {
                        if (!arena[y + o.y] || 
                            arena[y + o.y][x + o.x] === undefined || 
                            arena[y + o.y][x + o.x] !== 0) {
                            return true;
                        }
                    }
                }
            }
            return false;
        }

        function arenaSweep() {
            let rowCount = 1;
            outer: for (let y = arena.length - 1; y > 0; --y) {
                for (let x = 0; x < arena[y].length; ++x) {
                    if (arena[y][x] === 0) continue outer;
                }
                const row = arena.splice(y, 1)[0].fill(0);
                arena.unshift(row);
                ++y;
                player.score += rowCount * 10;
                rowCount *= 2;
            }
        }

        function update(time = 0) {
            if (isPaused) return;
            const deltaTime = time - lastTime;
            lastTime = time;
            dropCounter += deltaTime;
            if (dropCounter > dropInterval) playerDrop();
            draw();
            requestAnimationFrame(update);
        }

        function updateScore() {
            scoreElement.innerText = player.score;
        }

        function gameOver() {
            isPaused = true;
            finalScoreElement.innerText = player.score;
            overlayTitle.innerText = "GAME OVER";
            overlayMsg.innerHTML = "◊ú◊ê ◊ë◊ï◊©◊î ◊ú◊§◊†◊ï◊™<br>◊ú◊¶◊ï◊ï◊™ ◊î◊™◊û◊ô◊õ◊î ‚ù§Ô∏èF";
            scoreDisplay.style.display = 'block';
            document.querySelector('.btn-start').innerText = "◊û◊©◊ó◊ß ◊ó◊ì◊©";
            overlay.classList.remove('hidden');
        }

        function startGame() {
            resizeGame();
            overlay.classList.add('hidden');
            arena.forEach(row => row.fill(0));
            player.score = 0;
            player.next = null;
            updateScore();
            lastTime = performance.now();
            dropCounter = 0;
            playerReset();
            isPaused = false;
            update();
        }

        const btnLeft = document.getElementById('btn-left');
        const btnRight = document.getElementById('btn-right');
        const btnDown = document.getElementById('btn-down');
        const btnRotate = document.getElementById('btn-rotate');

        function addRepeatListener(elem, action) {
            elem.addEventListener('touchstart', (e) => { e.preventDefault(); action(); }, {passive: false});
            elem.addEventListener('mousedown', (e) => { e.preventDefault(); action(); });
        }

        addRepeatListener(btnLeft, () => playerMove(-1));
        addRepeatListener(btnRight, () => playerMove(1));
        addRepeatListener(btnRotate, () => playerRotateImpl(1));
        btnDown.addEventListener('touchstart', (e) => { e.preventDefault(); playerDrop(); }, {passive: false});
        btnDown.addEventListener('mousedown', (e) => { e.preventDefault(); playerDrop(); });

        window.addEventListener('resize', resizeGame);
        setTimeout(resizeGame, 100); 

    </script>
</body>
</html>
